<h1>My Friends</h1>
<div class="search-area"></div>
  <h3>Search Friends</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do  %>
    <div class="form-group row">
      <div class="col-sm-9 no-pad">
        <%= text_field_tag :friend, params[:friend], placeholder: 'Search for friends', autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-pad">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= fa_icon 'search 2x' %>
        <% end%>
      </div>
    </div>
  <% end %>
</div>

<div id="results" class="container">

</div>

<% if !@tracked_friends.empty? %>
  <%= render 'friends/list' %>
<% end %>