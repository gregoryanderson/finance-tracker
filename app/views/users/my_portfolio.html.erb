<h1>My Portfolio</h1>

<div class="search-area"></div>
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, method: :get do  %>
    <div class="form-group row">
      <div class="col-sm-9 no-pad">
        <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker symbol', autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-pad">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= fa_icon 'search 2x' %>
        <% end%>
      </div>
    </div>
  <% end %>
</div>
<% if @stock %>
  <div class="container">
    <div class="card card-header results-block">
      <strong>Symbol: </strong> <%= @stock.ticker %>
      <strong>Company: </strong><%= @stock.name %>
      <strong>Price: </strong><%= @stock.last_price %>
    </div>
  </div>
<% end %>