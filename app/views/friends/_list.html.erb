
<div class="row">
  <div class="col-9">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_friends.each do |friend|%>
          <tr>
            <th scope="row"><%= friend.email %></th>
            <th scope="row"><%= friend.first_name %></th>
            <th scope="row"><%= friend.last_name %></th>
            <td><%= link_to 'Stop following', '#', method: :delete, data: {confirm: 'Are you sure?'},
                            class: 'btn btn-sm btn-warning' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>